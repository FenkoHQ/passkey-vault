{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "src/background/background.ts",
    "src/content/content.ts",
    "src/content/webauthn-inject.ts",
    "src/ui/passkey-ui.ts",
    "src/ui/emergency-ui.ts",
    "src/ui/popup.ts",
    "src/ui/import.ts"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
