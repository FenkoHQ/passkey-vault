{
  "manifest_version": 2,
  "name": "PassKey Vault",
  "version": "0.2.0",
  "description": "Secure passkey storage and management",

  "permissions": [
    "storage",
    "activeTab",
    "https://*/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://localhost/*", "http://127.0.0.1/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "web_accessible_resources": ["webauthn-inject.js"],

  "browser_action": {
    "default_title": "PassKey Vault",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "passkey-vault@example.com",
      "strict_min_version": "109.0"
    }
  }
}
